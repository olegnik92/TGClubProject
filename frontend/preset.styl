fontset(n){
  if (n == 1){
    font-size: 3rem;
    font-weight: 100;
  } else if(n == 2){
    font-size: 2.5rem;
    font-weight: normal;
  } else if(n == 3){
    font-size: 2rem;
    font-weight: normal;
  } else if(n == 4){
    font-size: 1.5rem;
    font-weight: normal;
  } else if(n == 5){
    font-size: 1rem;
    font-weight: normal;
  } else if(n == 6){
    font-size: 0.8rem;
    font-weight: 500;
  } else if(n == 7){
    font-size: 0.6rem;
    font-weight: 100;
  }
}



